{
  "watch": [
    "config/",
    "models/",
    "middleware/",
    "routes/",
    "server.js"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "*.test.js",
    "*.spec.js",
    "logs/",
    ".git/",
    "test*.js",
    "setup*.js",
    "create*.js"
  ],
  "delay": "1000",
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": false
}
